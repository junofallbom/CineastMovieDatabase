<!DOCTYPE HTML>
<html>
<head>
    <title>Cineast Movie Database</title>
    <meta charset="utf-8" />
    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body>
    <!-- Header -->
        <header id="header" class="container">
            <!-- Logo -->
            <h1 class="logo">CMDB</h1>
            <span>The Movie Database for Cineasts</span>
            <div class="search-form">
                @using (Html.BeginForm("SearchMovie", "Home", FormMethod.Post))
                {
                    <input list="dataList" name='Query' id='Query' action="javascript:void(0)" oninput="searchMovie()" />
                    <datalist name='dataList' id='dataList'>
                    </datalist>
                    <form id="form">
                        <button>Search</button>
                    </form>
                }
            </div>
        </header>

    @RenderBody()

    <!-- Footer -->
    <div id="footer-wrapper">
        <footer id="footer" class="container">
            <div class="row">
                <div class="widget">
                    <!-- Links -->
                    <section class="widget links">
                        <h3>More Movie Pages</h3>
                        <ul class="style2">
                            <li><a href="https://www.imdb.com/">IMDB</a></li>
                            <li><a href="https://www.omdbapi.com/">OMDB</a></li>
                        </ul>
                    </section>

                </div>
                <div class="widget">
                    <!-- Contact -->
                    <section>
                        <h3>Contact Us</h3>
                        <p>
                            1234 Movie Road<br />
                            Hollywood, CA 00000<br />
                            (800) 555-0000
                        </p>
                    </section>

                </div>
            </div>
            <div id="copyright">
                <ul class="menu">
                    <li>&copy; Cmdb. All rights reserved</li>
                    <li>Design: <a href="#">Juno Fällbom</a></li>
                </ul>
            </div>
        </footer>
        <script type="text/javascript"
                src="~/js/main.js">
        </script>
        </div>
</body>
</html>

